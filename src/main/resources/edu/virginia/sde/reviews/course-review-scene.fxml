<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: dae7f3;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.ReviewSceneController">

    <!-- Back Button -->
    <Button layoutX="20.0" layoutY="20.0" onAction="#goBack" text="Back" prefWidth="100" prefHeight="50" />


    <!-- Course Details Section -->
    <VBox layoutX="50" layoutY="50" spacing="10">
        <Label text="Course Details" />
        <HBox spacing="10">
            <Label text="Mnemonic:" />
            <Label fx:id="mnemonicLabel" />
        </HBox>
        <HBox spacing="10">
            <Label text="Number:" />
            <Label fx:id="numberLabel" />
        </HBox>
        <HBox spacing="10">
            <Label text="Title:" />
            <Label fx:id="titleLabel" />
        </HBox>
        <HBox spacing="10">
            <Label text="Average Rating:" />
            <Label fx:id="averageRatingLabel" />
        </HBox>
    </VBox>

    <!-- Reviews Section with ScrollPane -->
    <VBox layoutX="50" layoutY="200" prefHeight="300" prefWidth="248" spacing="10">
        <Label text="Reviews" />
        <ScrollPane prefHeight="300" fitToWidth="true" fitToHeight="true">
            <content>
                <VBox fx:id="reviewsVBox" spacing="5" />
            </content>
        </ScrollPane>
    </VBox>


    <!-- Add Review Section -->
    <VBox layoutX="400" layoutY="50" spacing="10">
        <Label text="Add Review" />
        <HBox spacing="10">
            <Label text="Rating:" />
            <TextField fx:id="ratingTextField" promptText="Enter rating (0-5)" />
        </HBox>
        <HBox spacing="10">
            <Label text="Comment:" />
            <TextArea fx:id="commentTextArea" prefHeight="10.0" prefWidth="512.0" promptText="Add a comment" />
        </HBox>
        <Button onAction="#submitReview" text="Submit Review" />
    </VBox>

    <!-- Delete Review Section -->
    <VBox layoutX="400" layoutY="200" spacing="10">
        <Label text="Your Review" />
        <HBox spacing="10">
            <Label text="Your Rating:" />
            <Label fx:id="userRatingLabel" />
        </HBox>
        <HBox spacing="10">
            <Label text="Your Comment:" />
            <Label fx:id="userCommentLabel" />
        </HBox>
        <Button onAction="#editReview" text="Edit Review" />
        <Button onAction="#deleteReview" text="Delete Review" />
    </VBox>

    <!-- Error Label -->
    <Label fx:id="errorLabel" layoutX="640.0" layoutY="14.0" prefHeight="59.0" prefWidth="248.0" textFill="red" />

</AnchorPane>
